{
    "env": {
        "browser": true,
        "commonjs": true,
        "amd": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-constant-condition": "off",
        "prefer-const": "error",
        "semi": "error",
        "no-eval": "error",
        "no-implied-eval": "error"
    }
}
