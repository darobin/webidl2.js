{
    "env": {
        "browser": true,
        "commonjs": true,
        "amd": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "plugins": ["import"],
    "rules": {
        "import/extensions": ["error", "always"],
        "no-console": "error",
        "no-constant-condition": ["error", { "checkLoops": false }],
        "no-eval": "error",
        "no-implied-eval": "error",
        "no-trailing-spaces": "error",
        "prefer-const": "error",
        "semi": "error"
    },
    "parserOptions": {
        "sourceType": "module"
    }
}
